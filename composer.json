{
	"name": "icybee/module-files",
	"type": "icanboogie-module",
	"description": "Manages the files uploaded by the users of the CMS Icybee.",
	"keywords": [ "file", "upload" ],
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],

	"support": {
		"issues": "https://github.com/Icybee/module-files/issues",
		"source": "https://github.com/Icybee/module-files"
	},

	"minimum-stability": "dev",

	"require": {
		"php": ">=5.5.0",
		"icanboogie/module-installer": "^1.2.3",
		"icybee/module-registry": "^2.1.0",
		"icybee/module-nodes": "^2.1.0"
	},

	"require-dev": {
		"icanboogie/icanboogie": "^2.4.0",
		"icanboogie/bind-activerecord": "^0.3.0",
		"icanboogie/bind-cldr": "^0.3.0",
		"icanboogie/i18n": "^2.0.8"
	},

	"autoload": {
		"classmap": [ "lib" ]
	},

	"scripts": {
		"post-autoload-dump": "ICanBoogie\\Autoconfig\\Hooks::on_autoload_dump"
	}
}
